generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          Role           @default(STUDENT)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  orders        Order[]             // [] means “one-to-many” relationship
  refreshTokens RefreshToken[]
  canteen      Canteen[]
}

model RefreshToken {
  id         String   @id @default(uuid())
  tokenHash  String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  revoked    Boolean  @default(false)
  replacedBy String?
}

enum Role {
  STUDENT
  MANAGER
}

model Canteen {
  id          String   @id @default(uuid())
  name        String
  location    String
  isActive    Boolean  @default(true)

  managerId  String
  manager    User     @relation(fields: [managerId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  menus       Menu[]
  orders      Order[]
}

enum MenuCategory {
  BEVERAGES
  SNACKS
  MEALS
  CHINESE
  DESSERTS
}

model Menu {
  id          String   @id @default(uuid())
  name        String
  price       Int
  category    MenuCategory 
  isAvailable Boolean  @default(true)
  isActive    Boolean  @default(true)

  canteenId  String
  canteen    Canteen  @relation(fields: [canteenId], references: [id])
  orderItems  OrderItem[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([canteenId, name]) 
}


enum OrderStatus {
  CREATED
  ACCEPTED
  PREPARING
  READY
  COMPLETED
  CANCELLED
}


model Order {
  id          String      @id @default(uuid())
  status      OrderStatus @default(CREATED)
  totalAmount Int

  userId     String
  user       User        @relation(fields: [userId], references: [id])

  canteenId  String
  canteen    Canteen     @relation(fields: [canteenId], references: [id])

  items      OrderItem[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model OrderItem {
  id        String @id @default(uuid())
  quantity  Int

  orderId  String
  order    Order  @relation(fields: [orderId], references: [id])

  menuId   String
  menu     Menu   @relation(fields: [menuId], references: [id])
}




